SHELL=/bin/sh
CC=@CC@
LD=@LD@
prefix=@prefix@
top_srcdir=@top_srcdir@
exec_prefix=@exec_prefix@
RM=$(top_srcdir)/devscripts/rm_if
CFLAGS=@CFLAGS@ @GLOBUS_CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@ @LIBDL@ 
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES = \
        librtl.c \
        dasutil_routines4.c \
        mdsmsg.c \
        MDSprintf.c \
        MdsCmprs.c \
        MdsCompareXd.c \
        MdsCompress.c \
        MdsEvents.c \
        MdsGet1DxA.c \
        MdsGet1DxS.c \
        MdsGetSetShotId.c \
        MdsPk.c \
        MdsSerialize.c \
        MdsShrThreadSafe.c \
        MdsXdRoutines.c \
	MdsMalloc.c \
	mds_dsc_string.c

OBJECTS = $(SOURCES:.c=.o)
EXPORTS = MdsShr.exports

all : @MAKELIBDIR@ @MAKESHLIBDIR@ @MAKESHLIBDIR@libMdsShr@SHARETYPE@ @MAKELIBDIR@libMdsShr.a

depend:
	@makedepend -- $(CFLAGS) -- $(SOURCES)

clean :
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKELIBDIR@libMdsShr.a 
	@ $(RM) @MAKESHLIBDIR@libMdsShr@SHARETYPE@ 

install:
	if [ ! -d @libdir@ ] ; then \
                mkdirhier @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKESHLIBDIR@libMdsShr@SHARETYPE@ @libdir@
	if (test @SHARETYPE@ != .a) then \
		$(INSTALL) -m 644  @MAKELIBDIR@libMdsShr.a @libdir@; \
	fi;

@MAKESHLIBDIR@libMdsShr@SHARETYPE@ : $(OBJECTS) @EXPORTS_FILE@
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) $(LIBS)

@MAKELIBDIR@libMdsShr.a : $(OBJECTS)
	$(AR) -cr $@ $(OBJECTS)
	@RANLIB@ $@

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@

@MAKESHLIBDIR_RULE@

MdsShr.exports: MdsShr.def
	sed -e /LIBRARY/\;/\;/d MdsShr.def > $@
