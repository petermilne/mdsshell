SHELL=/bin/sh
CC=@CC@
LD=@LD@
top_srcdir=@top_srcdir@
RM=$(top_srcdir)/devscripts/rm_if
prefix=@prefix@
exec_prefix=@exec_prefix@
CFLAGS=@CFLAGS@ @IDL_INC@ @X_CFLAGS@ 
LDFLAGS=@LDFLAGS@ @IDL_LIB@
X_LIBS=@X_LIBS@
X_EXTRA_LIBS=@X_EXTRA_LIBS@
X_PRE_LIBS=@X_PRE_LIBS@
XLIBS = $(X_LIBS) $(X_PRE_LIBS) -lXt -lX11 $(X_EXTRA_LIBS)
MOTIF_LIBS = @MOTIF_LD_LDARC@ @XM_LIBS@ @MOTIF_LD_LDSHARE@ @LIBXP@ @LIBXEXT@
LIBS=@IDL_LIB@  @LIBS@ @DNET_STUB@ @LIBSOCKET@ -lMdsIpShr -lMdsShr -lMdsMath
INSTALL=@top_srcdir@/conf/install-sh -c
UIL=@UIL@ -I$(top_srcdir)/include

SOURCES = \
mdsevent.c \
cw_wveditv5.c \
memmoveext.c

OBJECTS = $(SOURCES:.c=.o)

EXPORTS = IdlMdsWidgets.export

all : @MAKELIBDIR@ @MAKELIBDIR@libIdlMdsWidgets@SHARETYPE@ @MAKELIBDIR@libIdlMdsWidgets.a @MAKEUIDDIR@cw_wvedit.uid


clean:
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKELIBDIR@libIdlMdsWidgets@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libIdlMdsWidgets.a

depend:
	 @makedepend -- $(CFLAGS) -- $(SOURCES)

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 644  @MAKELIBDIR@libIdlMdsWidgets.a @libdir@
	$(INSTALL) -m 755  @MAKELIBDIR@libIdlMdsWidgets@SHARETYPE@ @libdir@
	$(INSTALL) -m 644 @MAKEUIDDIR@cw_wvedit.uid @uiddir@


@MAKELIBDIR@libIdlMdsWidgets@SHARETYPE@ : $(OBJECTS) 
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) -L@MAKELIBDIR@ $(LDFLAGS)  -L/usr/X11R6/lib/ -lMrm $(LIBS) -lXmdsShr

@MAKELIBDIR@libIdlMdsWidgets.a : $(OBJECTS)
	$(AR) -cr $@ $(OBJECTS)
	@RANLIB@ $@


@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@

@MAKEUIDDIR@cw_wvedit.uid : cw_wvedit.uil ; $(UIL) -o $@ cw_wvedit.uil
